    "@uni-helper/uni-app-types": "^0.5.8",
    "@uni-helper/vite-plugin-uni-layouts": "^0.1.1",
    "@uni-helper/vite-plugin-uni-pages": "^0.2.3",
    "@unocss/eslint-config": "^0.53.5",
    "@vue-macros/reactivity-transform": "^0.3.13",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lightningcss": "^1.21.5",
    "lint-staged": "^13.2.3",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.8.4",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.1.6",
    "unocss": "^0.53.5",
    "unocss-applet": "^0.5.3",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.2",
    "vitest": "^0.32.4",
    "vue-tsc": "^1.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,vue}": [
      "pnpm run lint:script",
      "git add ."
    ],
    "**/*.scss": [
      "git add ."
    ]
  },
  "eslintConfig": {
    "extends": [
      "@antfu",
      "@unocss"
