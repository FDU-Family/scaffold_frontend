    "@uni-helper/uni-use": "^0.13.1",
    "@vueuse/core": "9",
    "pinia": "2.0.36",
    "vue": "3.2.47",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.7",
    "@babel/core": "^7.22.9",
    "@babel/eslint-parser": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@commitlint/cli": "^17.6.7",
